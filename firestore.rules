rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Users can read and write their own user document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read all user documents for the user list
      allow read: if request.auth != null;
      
      // Admins can read and write any user document
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Users can read and write messages
      allow read, write: if request.auth != null;
      
      // Admins can delete any message
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Metadata collection
    match /metadata/{docId} {
      // Only admins can read and write metadata
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Followers/Following arrays in user documents
    // Users can update their own following/followers arrays
    match /users/{userId} {
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['following', 'followers']) &&
        request.resource.data.following is list &&
        request.resource.data.followers is list;
    }
  }
}
